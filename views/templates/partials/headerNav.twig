<header class="main-header">    
    <a href="{{path_for('home')}}" class="logo">
        <span class="logo-mini"><b>POS</b></span>
        <span class="logo-lg"><b>POS</b> | Book Store</span>
    </a>
    <nav class="navbar navbar-static-top" role="navigation">    
        <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
            <span class="sr-only">Toggle navigation</span>
        </a>
        <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">
                {% if user %}
                <li class="dropdown user user-menu">

            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
             {# <i class="fa fa-user"></i> #}<img src="http://koolkampus.co.in/wp-content/uploads/2014/02/admin.png" class="user-image" alt="User Image">
              <span class="hidden-xs">{{user.name}}</span>
            </a>
            <ul class="dropdown-menu">
              <!-- User image -->
              <li class="user-header">
                <img src="http://koolkampus.co.in/wp-content/uploads/2014/02/admin.png" class="img-circle" alt="User Image">

                <p>
                  {{user.name}} - Admin Point Of Sale
                  <small>Admin since Maret. 2016</small>
                </p>
              </li>
              <!-- Menu Body -->
              <li class="user-body">
                <div class="row">
                  <div class="col-xs-4 text-center">
                    <a href="#">Setting</a>
                  </div>
                  <div class="col-xs-4 text-center">
                    <a href="#">Account</a>
                  </div>
                  <div class="col-xs-4 text-center">
                    <a href="{{ path_for('user.admin')}}">Admin</a>
                  </div>
                </div>
                <!-- /.row -->
              </li>
              <!-- Menu Footer-->
              <li class="user-footer">
                <div class="pull-left">
                  <a href="{{ path_for('user.profile')}}" class="btn btn-default btn-flat">View Profile</a>
                </div>
                <div class="pull-right">
                  <a href="{{ path_for('user.admin')}}" class="btn btn-default btn-flat">Admin</a>
                </div>
              </li>
            </ul>
          </li>
        </div>
        {% endif %}

    </nav>
</header>